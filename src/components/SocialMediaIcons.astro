---
import Icon from "~/components/Icon.astro";
import { socialMedia } from "~/data/config.js";

// Mapping of social media platforms to Tabler icon names
const iconMap = {
  facebook: "brand-facebook",
  instagram: "brand-instagram",
  youtube: "brand-youtube",
  x: "brand-x",
  twitter: "brand-twitter",
};
---

{
  Object.values(socialMedia).map(
    (item: { url: string; label: string; icon: string }) => (
      <a
        href={item.url}
        target="_blank"
        aria-label={item.label}
        rel="noopener noreferrer"
        class="social-media-icon"
      >
        <Icon
          name={iconMap[item.icon] || item.icon}
          size="8"
          class="text-gray-600 hover:text-gray-800 transition p-1 -m-1"
        />
      </a>
    )
  )
}
