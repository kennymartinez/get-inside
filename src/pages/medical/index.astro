---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Container from "~/components/Container.astro";
import Heading from "~/components/Heading.astro";
import ShowMedicalSpecialists from "~/components/medical/ShowMedicalSpecialists.astro";

import Icon from "~/components/Icon.astro";
import { getCollection } from "astro:content";

// Get all medical specialists to show counts
const allSpecialists = await getCollection(
  "medicalTourism",
  ({ data }) => !data.misc?.hidden
);
const specialistCount = allSpecialists.length;
---

<Layout pageTitle="Medical Tourism" title="Medical Tourism in Colombia">
  <!-- Hero Section with Search -->
  <Section class:list={"bg-gradient-to-br from-blue-50 to-blue-100"}>
    <Container>
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl lg:text-6xl font-bold text-gray-900 mb-6">
          World-Class Medical Care in Colombia
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Discover top-rated medical specialists offering international-standard
          treatments at affordable prices in beautiful Colombian cities.
        </p>

        <!-- Quick Action Button -->
        <div class="mb-8">
          <a
            href="/medical/specialists/1"
            class="button button-black inline-flex items-center text-lg px-8 py-4"
          >
            Browse All Specialists
            <Icon name="tabler:arrow-right" class="ml-2 w-5 h-5" />
          </a>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600">
              {specialistCount}+
            </div>
            <div class="text-sm text-gray-600">Verified Specialists</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600">8</div>
            <div class="text-sm text-gray-600">Medical Specialties</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600">5</div>
            <div class="text-sm text-gray-600">Colombian Cities</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600">70%</div>
            <div class="text-sm text-gray-600">Cost Savings</div>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Featured Specialists -->
  {
    specialistCount > 0 && (
      <Section class:list={"bg-white"}>
        <Container>
          <Heading>
            <h2 slot="heading-title">Featured Medical Specialists</h2>
            <p slot="heading-content">
              Meet our carefully selected medical professionals who specialize
              in treating international patients with the highest standards of
              care.
            </p>
          </Heading>
          <ShowMedicalSpecialists featured={true} limit={6} />

          <div class="text-center mt-8">
            <a
              href="/medical/specialists/1"
              class="button button-black inline-flex items-center"
            >
              View All Specialists
              <Icon name="tabler:arrow-right" class="ml-2 w-4 h-4" />
            </a>
          </div>
        </Container>
      </Section>
    )
  }

  <!-- If no specialists, show setup message -->
  {
    specialistCount === 0 && (
      <Section class:list={"bg-white"}>
        <Container>
          <div class="text-center py-16">
            <div class="text-6xl mb-4">üè•</div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">
              Medical Specialists Coming Soon
            </h2>
            <p class="text-gray-600 mb-8 max-w-2xl mx-auto">
              We're currently building our network of verified medical
              specialists. Our curated selection of world-class doctors will be
              available shortly.
            </p>
            <div class="bg-blue-50 p-6 rounded-lg max-w-md mx-auto">
              <p class="text-sm text-blue-800">
                <strong>For Developers:</strong> Add medical specialists by
                creating MDX files in
                <code class="bg-blue-100 px-2 py-1 rounded">
                  /src/content/medical/
                </code>
              </p>
            </div>
          </div>
        </Container>
      </Section>
    )
  }

  <!-- Why Choose Colombia -->
  <Section class:list={"bg-gray-50"}>
    <Container>
      <Heading>
        <h2 slot="heading-title">Why Choose Colombia for Medical Tourism?</h2>
      </Heading>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div
            class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <Icon name="tabler:award" class="w-8 h-8 text-blue-600" />
          </div>
          <h3 class="text-xl font-bold mb-2">World-Class Quality</h3>
          <p class="text-gray-600">
            JCI-accredited hospitals and internationally trained specialists
          </p>
        </div>
        <div class="text-center">
          <div
            class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <Icon
              name="tabler:currency-dollar"
              class="w-8 h-8 text-green-600"
            />
          </div>
          <h3 class="text-xl font-bold mb-2">Affordable Costs</h3>
          <p class="text-gray-600">
            Save 50-70% compared to US and European prices
          </p>
        </div>
        <div class="text-center">
          <div
            class="bg-yellow-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <Icon name="tabler:plane" class="w-8 h-8 text-yellow-600" />
          </div>
          <h3 class="text-xl font-bold mb-2">Easy Access</h3>
          <p class="text-gray-600">
            Direct flights from major cities and visa-free travel
          </p>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Medical Specialties -->
  <Section class:list={"bg-white"}>
    <Container>
      <Heading>
        <h2 slot="heading-title">Popular Medical Specialties</h2>
        <p slot="heading-content">
          Explore our most sought-after medical specialties with world-renowned
          specialists.
        </p>
      </Heading>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <a href="/medical/specialty/cosmetic-surgery" class="group">
          <div
            class="bg-white p-6 rounded-lg shadow overflow-hidden xxl:transition xxl:border-transparent xxl:border-b-4 hover:lg:border-yellow-300"
          >
            <div class="text-center">
              <div class="text-4xl mb-3">‚ú®</div>
              <h3 class="font-bold text-gray-900 group-hover:text-blue-600">
                Cosmetic Surgery
              </h3>
              <p class="text-sm text-gray-600 mt-2">
                Breast augmentation, liposuction, facelifts
              </p>
            </div>
          </div>
        </a>

        <a href="/medical/specialty/dentistry" class="group">
          <div
            class="bg-white p-6 rounded-lg shadow overflow-hidden xxl:transition xxl:border-transparent xxl:border-b-4 hover:lg:border-yellow-300"
          >
            <div class="text-center">
              <div class="text-4xl mb-3">ü¶∑</div>
              <h3 class="font-bold text-gray-900 group-hover:text-blue-600">
                Dentistry
              </h3>
              <p class="text-sm text-gray-600 mt-2">
                Implants, veneers, full reconstruction
              </p>
            </div>
          </div>
        </a>

        <a href="/medical/specialty/bariatric-surgery" class="group">
          <div
            class="bg-white p-6 rounded-lg shadow overflow-hidden xxl:transition xxl:border-transparent xxl:border-b-4 hover:lg:border-yellow-300"
          >
            <div class="text-center">
              <div class="text-4xl mb-3">‚öñÔ∏è</div>
              <h3 class="font-bold text-gray-900 group-hover:text-blue-600">
                Bariatric Surgery
              </h3>
              <p class="text-sm text-gray-600 mt-2">
                Gastric sleeve, bypass, weight loss
              </p>
            </div>
          </div>
        </a>

        <a href="/medical/specialty/orthopedics" class="group">
          <div
            class="bg-white p-6 rounded-lg shadow overflow-hidden xxl:transition xxl:border-transparent xxl:border-b-4 hover:lg:border-yellow-300"
          >
            <div class="text-center">
              <div class="text-4xl mb-3">ü¶¥</div>
              <h3 class="font-bold text-gray-900 group-hover:text-blue-600">
                Orthopedics
              </h3>
              <p class="text-sm text-gray-600 mt-2">
                Joint replacement, sports injuries
              </p>
            </div>
          </div>
        </a>
      </div>
    </Container>
  </Section>
</Layout>
