---
import { Image } from "astro:assets";
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Container from "~/components/Container.astro";
import Button from "~/components/Button.astro";
import Hero from "~/components/Hero.astro";
import Faq from "~/components/Faq.astro";
import Heading from "~/components/Heading.astro";
import WidgetSearch from "~/components/WidgetSearch.astro";
import Grid from "~/components/Grid.astro";
import GridItem from "~/components/GridItem.astro";
import ShowPosts from "~/components/ShowPosts.astro";
import Team from "~/components/Team.astro";
import Stats from "~/components/Stats.astro";

// Images - These would need to be replaced with travel-themed images
import ImageTravelAgent from "~/assets/images/pexels-shkrabaanthony-7144179.jpg";
import ImageHeadingBackground from "~/assets/images/pexels-jeshoots-com-147458-451590.jpg";
import ShowDestinations from "~/components/ShowDestinations.astro"; // Updated import
import ImageOne from "~/assets/images/pexels-leif-bergerson-99376750-9764731.webp";
import ImageTwo from "~/assets/images/pexels-zenzazione-2922140.webp";
---

<Layout pageTitle="Home">
  {/* Main Heading */}
  <Section class:list={"relative"}>
    <Image
      src={ImageHeadingBackground}
      alt="Travel destinations background"
      class:list={"absolute inset-0 w-full h-full object-cover"}
    />
    <div class="absolute inset-0 w-full h-full object-cover bg-gray-800/80">
    </div>
    <Container class:list={"relative z-10"}>
      <Heading class:list={"prose-invert max-w-4xl"}>
        <h1 slot="heading-title" class="mb-0 lg:text-7xl text-balance">
          Discover your next adventure in our exclusive destinations
        </h1>
        <p slot="heading-content">
          Search for your perfect getaway here. We offer amazing destinations
          around the world. Browse through our collection and find the perfect
          destination that suits your travel dreams and budget.
        </p>
      </Heading>
      <WidgetSearch />
    </Container>
  </Section>

  {/* Hero */}
  <Section>
    <Container>
      <Hero>
        <div slot="hero-left" class="prose lg:max-w-2xl">
          <h2>Welcome to our travel agency!</h2>
          <p>
            Find your next adventure here. We have amazing destinations
            worldwide. Browse through our collection and find the perfect
            getaway that suits your travel style and budget.
          </p>

          <Button href="/destinations" class:list={"mt-4"}
            >View all destinations</Button
          >
        </div>
        <div slot="hero-right">
          <Image src={ImageTravelAgent} alt="Travel agent" />
        </div>
      </Hero>
    </Container>
  </Section>

  {/* Grid */}
  <Section>
    <Container>
      <Grid>
        <GridItem
          image={ImageOne}
          imageAlt="Travel destinations"
          span={2}
          link="/destinations"
          As="a"
          xl
        >
          <h2>Featured destinations</h2>
          <p>
            Discover unforgettable travel experiences with our exclusive
            collection of featured destinations. Whether you're seeking pristine
            tropical beaches, majestic mountain retreats, or vibrant cultural
            cities, we have something for every traveler. Our carefully curated
            destinations ensure you find the perfect match for your travel style
            and budget.
          </p>
          <Button
            As="button"
            type="button"
            color="white-outline"
            class:list={"mt-4 group-hover:bg-white/10"}
            >View all destinations</Button
          >
        </GridItem>

        <GridItem
          image={ImageTwo}
          imageAlt="Travel experiences"
          link="/destinations"
          As="a"
        >
          <h3>Popular destinations</h3>
          <p>
            Explore the world's most sought-after destinations. Whether you're
            looking for tropical paradise, mountain adventures, or cultural
            immersion, we have something for everyone.
          </p>
          <Button
            As="button"
            type="button"
            color="white-outline"
            class:list={"mt-4 group-hover:bg-white/10"}
            >View all destinations</Button
          >
        </GridItem>

        <GridItem>
          <h3>Trending destinations</h3>
          <p>
            Discover what's trending in travel right now. From hidden gems to
            popular hotspots, explore destinations that are capturing travelers'
            hearts worldwide.
          </p>
        </GridItem>
      </Grid>
    </Container>
  </Section>

  {/* Hero */}
  <Section class:list={"bg-gray-50"}>
    <Container>
      <Hero invert>
        <div slot="hero-left" class="prose lg:max-w-2xl">
          <h2>Welcome to our travel agency!</h2>
          <p>
            Find your next adventure here. We offer a wide range of destinations
            for every type of traveler. Browse through our collection and find
            the perfect getaway that matches your dreams and budget.
          </p>
        </div>
        <div slot="hero-right">
          <Image src={ImageTravelAgent} alt="Travel consultant" />
        </div>
      </Hero>
    </Container>
  </Section>

  {/* Featured Destinations */}
  <Section class:list={"bg-blue-50"}>
    <Container>
      <Heading>
        <h2 slot="heading-title" class="mb-0">Featured destinations</h2>
        <p slot="heading-content">
          Discover your next dream destination here. We have amazing places to
          visit around the world. Browse through our collection and find the
          perfect getaway that suits your travel style and budget.
        </p>
      </Heading>

      <ShowDestinations
        slugs={[
          "ciudad-perdida-trek",
          "cartagena-city-tour",
          "coffee-region-experience",
        ]}
      />
    </Container>
  </Section>

  {/* Stats */}
  <Section>
    <Container>
      <Heading class:list={"text-center mx-auto"}>
        <h2 slot="heading-title" class="text-balance">Why choose us?</h2>
        <p slot="heading-content">
          We are the leading travel agency in the industry. With over 20 years
          of experience, we have helped thousands of travelers discover their
          dream destinations.
        </p>
      </Heading>

      <Stats
        items={[
          {
            title: "Destinations available",
            value: "259",
            animateNumber: true,
            animateFrom: 100,
          },
          {
            title: "Happy travelers",
            value: "1088",
            animateNumber: true,
            animateFrom: 800,
          },
          {
            title: "Experience",
            value: "20+ years",
          },
        ]}
      />
    </Container>
  </Section>

  {/* CTA */}
  <Section class:list={"bg-gradient-to-br from-gray-900 to-gray-700"}>
    <Container>
      <Heading class:list={"mb-0 lg:mb-0 prose-invert text-center mx-auto"}>
        <h2 slot="heading-title">Can't find the perfect destination?</h2>

        <p slot="heading-content">
          Our team is here to help you find the perfect destination that suits
          your travel dreams and budget. Whether you're looking for tropical
          beaches, mountain adventures, or cultural experiences, we have
          something for everyone.
        </p>

        <Button href="/contact" color="white" class:list={"mt-8"}
          >Contact us</Button
        >
      </Heading>
    </Container>
  </Section>

  {/* Recent Destinations */}
  <Section class:list={"bg-gray-50"}>
    <Container>
      <Heading>
        <h2 slot="heading-title" class="mb-0">Popular destinations</h2>
        <p slot="heading-content">
          Explore trending destinations here. We have amazing places to visit
          around the world. Browse through our collection and find the perfect
          adventure that suits your travel preferences and budget.
        </p>
      </Heading>

      <ShowDestinations
        ui="grid"
        slugs={[
          "ciudad-perdida-trek",
          "cartagena-city-tour",
          "coffee-region-experience",
        ]}
      />
    </Container>
  </Section>

  {/* News */}
  <Section>
    <Container>
      <Heading class:list={"max-w-3xl"}>
        <h2 slot="heading-title">Latest travel news</h2>

        <p slot="heading-content">
          Stay up to date with the latest travel news and updates from our
          agency. Read our blog posts to learn more about featured destinations,
          special offers, and travel industry insights.
        </p>
      </Heading>

      <ShowPosts />
    </Container>
  </Section>

  {/* FAQ */}
  <Section class:list={"bg-gray-50"}>
    <Container>
      <Heading class:list={"max-w-3xl mx-auto lg:text-center"}>
        <h2 slot="heading-title">Welcome to our travel agency!</h2>

        <p slot="heading-content">
          Find your next adventure here. We have amazing destinations around the
          world. Browse through our collection and find the perfect getaway that
          suits your travel dreams and budget.
        </p>
      </Heading>

      <Faq
        items={[
          {
            question: "What types of destinations do you offer?",
            answer:
              "We offer a wide variety of destinations including tropical beaches, mountain retreats, cultural cities, adventure locations, and luxury resorts worldwide.",
          },
          {
            question: "Do you provide custom travel packages?",
            answer:
              "Yes! We specialize in creating personalized travel experiences tailored to your preferences, budget, and travel style.",
          },
          {
            question: "What's included in your travel packages?",
            answer:
              "Our packages typically include accommodation, transportation, guided tours, and local experiences. Specific inclusions vary by destination and package type.",
          },
        ]}
      />
    </Container>
  </Section>

  {/* Team */}
  <Section>
    <Container>
      <Heading class:list={"max-w-3xl mx-auto lg:text-center"}>
        <h2 slot="heading-title">Our travel experts</h2>

        <p slot="heading-content">
          Meet the team behind our travel agency. Our dedicated travel
          consultants are here to help you find the perfect destination that
          suits your needs and budget. Whether you're seeking tropical beaches,
          mountain adventures, or cultural experiences, we have something for
          everyone.
        </p>
      </Heading>

      <Team />
    </Container>
  </Section>
</Layout>
